<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <style>
        body, html {
            height: 100%;
            margin: 0;
            font-family: 'Arial', sans-serif;
            background: url('/userAssets/img/bg-2.jpg') no-repeat center center fixed;
            background-size: cover;
            color: #fff;
        }

        .container {
            background-color: rgba(0, 0, 0, 0.7);
            border-radius: 12px;
            padding: 20px;
            margin-top: 20px;
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.4);
        }

        h2 {
            text-align: center;
            margin-bottom: 20px;
            font-size: 24px;
        }

        .navbar {
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        }

        .table-responsive {
            overflow-x: auto;
        }

        table {
            background-color: rgba(255, 255, 255, 0.1);
            color: #fff;
        }

        table th, table td {
            text-align: center;
            vertical-align: middle;
        }

        .table-dark {
            background-color: rgba(0, 0, 0, 0.8);
        }

        .btn-warning, .btn-danger {
            transition: 0.3s;
            color: #fff;
        }

        .btn-warning:hover {
            background-color: #d4a60c;
        }

        .btn-danger:hover {
            background-color: #cc0000;
        }

        .navbar-brand, .nav-link {
            color: #fff !important;
            font-size: 16px;
            transition: color 0.3s;
        }

        .nav-link:hover {
            color: #f1f1f1 !important;
        }

        img {
            border-radius: 8px;
            transition: transform 0.3s ease;
            max-width: 80px;
            height: auto;
        }

        img:hover {
            transform: scale(1.1);
        }

        @media (max-width: 768px) {
            .container {
                padding: 15px;
            }
            h2 {
                font-size: 20px;
            }
            .btn {
                padding: 5px 10px;
                font-size: 14px;
            }
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="/admin">Admin Dashboard</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item"><a class="nav-link" href="/admin/addUser">Add User</a></li>
                    <li class="nav-item"><a class="nav-link" href="/admin/addProduct">Add Product</a></li>
                    <li class="nav-item"><a class="nav-link" href="#">Manage Orders</a></li>
                    <li class="nav-item"><a class="nav-link" href="/admin/addCategory">Add Category</a></li>
                    <li class="nav-item"><a class="nav-link" href="/admin/logout">Log Out</a></li>
                </ul>
            </div>
        </div>
    </nav>

    
        <div class="container">
            <h2>Customized Product Users</h2>
            <div class="table-responsive">
              <table class="table table-striped table-bordered">
                <thead class="table-dark">
                    <tr>
                      <th>User ID</th>
                      <th>Name</th>
                      <th>Email</th>
                     
                      <th>Products</th>
                     
                    </tr>
                  </thead>
                  <tbody>
                    <% usersWithCustomizedProducts.forEach(user => { %>
                      <tr>
                        <td><%= user.userId %></td>
                        <td><%= user.userName %></td>
                        <td><%= user.userEmail %></td>
                        <td>
                          <% if (user.products.length > 0) { %>
                            <ul>
                              <% user.products.forEach(product => { %>
                                <li>
                                  <strong><%= product.name %></strong> (MOQ: <%= product.moq %>)<br />
                                  <% if (product.image && product.image.length > 0) { %>
                                    <img src="<%= product.image[0] %>" alt="Product Image"
                                      style="max-width: 100px; margin: 5px; border-radius: 8px;" />
                                  <% } %>
                                </li>
                              <% }) %>
                            </ul>
                          <% } else { %>
                            No products
                          <% } %>
                        </td>
                       
                      </tr>
                    <% }) %>
                  </tbody>
             
              </table>
            </div>
          </div>
          
     
      

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
