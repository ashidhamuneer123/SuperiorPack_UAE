});


function updateChart() {
    const timeFilter = document.getElementById('timeFilter').value;
    let newData;

    if (timeFilter === 'monthly') {
        newData = {
            orderCounts: 1000,
            productCounts: 500,
            totalAmount: 9876655,  
            labels: ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun', 'Jul', 'Aug', 'Sep', 'Oct', 'Nov', 'Dec']
        };
    } else if (timeFilter === 'yearly') {
        newData = {
            orderCounts: 9876544,
            productCounts: 8765433,
            totalAmount: 556778888,  
            labels: ['2019', '2020', '2021', '2022', '2023', '2024', '2025', '2026', '2027', '2028', '2029', '2030']
        };
    }

    salesChart.data.datasets[0].data = newData.orderCounts;
    salesChart.data.datasets[1].data = newData.productCounts;
    salesChart.data.datasets[2].data = newData.totalAmount;  
    salesChart.data.labels = newData.labels;

    salesChart.update();
}
  function computeYearlyData(monthlyData) {
    let yearlyData = [];
    let sum = 0;
    let monthCount = 0;

    for (let i = 0; i < monthlyData.length; i++) {
        sum += monthlyData[i];
        monthCount++;

        if (monthCount === 12 || i === monthlyData.length - 1) { 
            yearlyData.push(sum);
            sum = 0;
            monthCount = 0;
        }
    }

    return yearlyData;
}

  function computeYearlyLabels() {
      let currentYear = new Date().getFullYear();
      let labels = [];

      for (let i = currentYear - 5; i <= currentYear + 6; i++) {
          labels.push(i.toString());
      }

      return labels;
  }
</script>  


