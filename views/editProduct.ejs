                      </div>
                  
                      <div class="form-group col-md-6">
                        <label for="minOrderWithoutPrinting" class="fw-bold">Min Order (Without Printing)</label>
                        <input type="text" class="form-control" name="minOrderWithoutPrinting" value="<%= product.minOrderWithoutPrinting %>">
                      </div>
                  
                      <div class="form-group col-md-6">
                        <label for="moreInfo" class="fw-bold">More Info</label>
                        <textarea class="form-control" name="moreInfo"><%= product.moreInfo %></textarea>
                      </div>
                  
                      <div class="form-group col-md-6 d-flex flex-column">
                        <label for="isCustomized" class="fw-bold mb-2">Is this product customized?</label>
                        <select name="isCustomized" id="isCustomized" class="form-control">
                          <option value="false" <%= product.isCustomized === false ? 'selected' : '' %>>Generic</option>
                          <option value="true" <%= product.isCustomized === true ? 'selected' : '' %>>Customized</option>
                        </select>
                      </div>
                    </div>
                  
                    <div class="mt-4">
                      <button type="submit" class="btn btn-primary">Update Product</button>
                    </div>
                  </form>
                  
                  
              
                  
                  


                
