        <section style="position: relative;" class="new-product p-md-5">
            <div class="h3 fw-bold text-second px-4">
                <a class="text-second h6" style="text-decoration: none;" href="/admin/viewProducts"><i
                        class="fa-solid fa-left-long"></i><span>View Products</span></a>
                        <br>
                <br><span>Edit Product</span>
            </div>
            <div class="card mb-4">
               
                <form action="/admin/editProduct/<%= product._id %>" method="POST" enctype="multipart/form-data" class="container mt-5">

                    <div class="row">
                      <div class="form-group col-md-6">
                        <label for="name" class="fw-bold">Product Name</label>
                        <input type="text" class="form-control" name="name" value="<%= product.name %>" required>
                      </div>
                  
                      <div class="form-group col-md-6">
                        <label for="moq" class="fw-bold">MOQ</label>
                        <input type="text" class="form-control" name="moq" value="<%= product.moq %>" required>
                      </div>
                  
                      <div class="form-group col-md-6">
                        <label for="material" class="fw-bold">Material</label>
                        <textarea class="form-control" name="material" required><%= product.material %></textarea>
                      </div>
                  
                      <div class="form-group col-md-6">
                        <label for="function" class="fw-bold">Function</label>
                        <textarea class="form-control" name="function" required><%= product.function %></textarea>
                      </div>
                  
                      <div class="form-group col-md-6">
                        <label for="size" class="fw-bold">Size</label>
                        <input type="text" class="form-control" name="size" value="<%= product.size %>" required>
                      </div>
                  
                      <!-- Custom Sizes (Array Fields) -->
                      <div class="form-group col-md-6">
                        <label class="fw-bold">Customized Sizes</label>
                        <div id="customSizesWrapper">
                          <% if (product.customSizes && product.customSizes.length > 0) { %>
                            <% product.customSizes.forEach((sizeObj, index) => { %>
                              <div class="input-group mb-2">
                                <input type="text" name="customSizes[]" class="form-control" value="<%= sizeObj.size %>" placeholder="Enter size">
                                <input type="text" name="systemCode[]" class="form-control" value="<%= sizeObj.systemCode %>" placeholder="Enter the system code">
                                <% if (index === 0) { %>
                                  <button type="button" class="btn btn-success addSizeBtn">+</button>
                                <% } else { %>
                                  <button type="button" class="btn btn-danger removeSizeBtn">-</button>
                                <% } %>
                              </div>
                            <% }); %>
                          <% } else { %>
                            <div class="input-group mb-2">
                              <input type="text" name="customSizes[]" class="form-control" placeholder="Enter size">
                              <input type="text" name="systemCode[]" class="form-control" placeholder="Enter the system code">
                              <button type="button" class="btn btn-success addSizeBtn">+</button>
                            </div>
                          <% } %>
                        </div>
                      </div>
                  
                      <div class="form-group col-md-6">
                        <label for="leadTime" class="fw-bold">Lead Time</label>
                        <input type="text" class="form-control" name="leadTime" value="<%= product.leadTime %>" required>
                      </div>
                  
                      <div class="form-group col-md-6">
                        <label for="description" class="fw-bold">Description</label>
                        <textarea class="form-control" name="description" required><%= product.description %></textarea>
                      </div>
                  
                      <div class="form-group col-md-6">
                        <label for="prod_id" class="fw-bold">Product ID</label>
                        <input type="text" class="form-control" name="prod_id" value="<%= product.prod_id %>" required>
                      </div>
                  
                      <div class="form-group col-md-6">
                        <label for="catId" class="fw-bold">Category</label>
                        <select name="catId" class="form-control" required>
                          <% categories.forEach(category => { %>
                            <option value="<%= category._id %>" <%= product.catId == category._id ? 'selected' : '' %>><%= category.name %></option>
                          <% }) %>
                        </select>
                      </div>
                  
                      <div class="form-group col-md-6">
                        <label for="mainImage" class="fw-bold">Main Image</label>
                        <input type="file" name="mainImage" multiple class="form-control">
                        <% if (product.mainImage) { %>
                          <img src="/uploads/<%= product.mainImage %>" width="100" class="mt-2">
                        <% } %>
                      </div>
                  
                      <div class="form-group col-md-6">
                        <label for="productImages" class="fw-bold">Product Images</label>
                        <input type="file" name="productImages" multiple class="form-control">
                        <% if (product.productImages && product.productImages.length > 0) { %>
                          <div class="mt-2">
                            <% product.productImages.forEach(image => { %>
                              <img src="/uploads/<%= image %>" width="80" class="me-2 mb-2">
                            <% }); %>
                          </div>
                        <% } %>
                      </div>
                  
                      <div class="form-group col-md-6">
                        <label for="printing" class="fw-bold">Printing</label>
                        <input type="text" class="form-control" name="printing" value="<%= product.printing %>">
                      </div>
                  
                      <div class="form-group col-md-6">
                        <label for="ingredients" class="fw-bold">Ingredients</label>
                        <textarea class="form-control" name="ingredients"><%= product.ingredients %></textarea>
                      </div>
                  
                      <div class="form-group col-md-6">
                        <label for="minOrderWithPrinting" class="fw-bold">Min Order (With Printing)</label>
